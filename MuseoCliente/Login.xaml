<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MuseoCliente.Login"
	x:Name="Window"
	Title="Login"
	Width="344" Height="352" ResizeMode="NoResize">

	<Border x:Name="LayoutRoot" >
		<StackPanel Margin="0" Orientation="Vertical">
			<Label Height="20"/>
			<Label FontSize="16.888" Foreground="{DynamicResource Negro}" Content="Bienvenido" HorizontalContentAlignment="Center"/>
			<Grid Height="175.96">
				<Label Margin="30,10,0,138.5" Height="27.46" Width="53" HorizontalAlignment="Left">Usuario</Label>
				<TextBox x:Name="txtUsuario" Height="20" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Center" Margin="30,37.46,35,118.5" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource GrisDark}" VerticalContentAlignment="Center"/>
				<Label Margin="30,64.75,0,83.75" Height="27.46" Width="73" HorizontalAlignment="Left">Contraseña</Label>
				<TextBox x:Name="txtPassword" Height="20" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Margin="30,92.21,35,63.75" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource GrisDark}" VerticalContentAlignment="Center"/>
				<Button Height="{Binding Height, ElementName=textBox}" Margin="116.834,134,116.834,19" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667">
					<TextBlock Style="{DynamicResource Iconos}" FontSize="13">Iniciar Sesión</TextBlock>
				</Button>
			</Grid>
			<Label Height="10"/>
			<Button Height="30" Margin="0,5" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667">
				<TextBlock FontSize="12"><Run Text="Salir"/></TextBlock>
			</Button>
		</StackPanel>
	</Border>
</Window>