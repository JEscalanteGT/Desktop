<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MuseoCliente.Login"
	x:Name="Window"
	Title="Login"
	Width="344" Height="277" ResizeMode="NoResize">

	<Border x:Name="LayoutRoot" >
		<StackPanel Margin="0" Orientation="Vertical">
			<Label Height="20"/>
			<Label FontSize="20" Foreground="{DynamicResource PureBlue}" Content="Bienvenido" HorizontalContentAlignment="Center" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" FontWeight="Bold"/>
			<Grid Height="174">
				<PasswordBox x:Name="txtPassword" Height="31" VerticalAlignment="Center" Margin="30,92,35,52.96" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource GrisDark}" VerticalContentAlignment="Center"/>
				<Button Height="{Binding Height, ElementName=textBox}" Margin="30,143,185,-0.04" Style="{DynamicResource BlueButton}" Foreground="White" Content="Iniciar Sesión" FontWeight="Bold" Click="Button_Click_2"/>				
                <Button Margin="180,143,35,-0.04" Style="{DynamicResource PinkButton}" Foreground="White" Content="Salir" FontWeight="Bold" IsCancel="True" Click="Button_Click_1"/>
                <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="32" Margin="30,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="273"/>
            </Grid>
            
            <Label Height="10"/>
        </StackPanel>
	</Border>
</Window>