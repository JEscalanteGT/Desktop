<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MuseoCliente.Login"
	x:Name="Window"
	Title="Login"
	Width="344" Height="299" ResizeMode="NoResize">

	<Border x:Name="LayoutRoot" >
		<StackPanel Margin="0" Orientation="Vertical">
            <Label FontSize="16.888" Foreground="{DynamicResource White}" Content="Bienvenido" HorizontalContentAlignment="Center" FontWeight="Bold" Height="44" Background="{DynamicResource StrongCyan}"/>
            <Grid>
                <Label Margin="30,10,0,138.5" Height="27.46" Width="53" HorizontalAlignment="Left" Content="Usuario"/>
                <TextBox x:Name="txtUsuario" Height="28" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Center" Margin="30,37,35,110.96" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource DarkGray}" VerticalContentAlignment="Center"/>
                <Label Margin="30,64.75,0,83.75" Height="27.46" Width="73" HorizontalAlignment="Left" Content="Contraseña"/>
                <PasswordBox x:Name="txtPassword" Height="26" VerticalAlignment="Center" Margin="30,92,35,57.96" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource DarkGray}" VerticalContentAlignment="Center"/>
                <Button Height="{Binding Height, ElementName=textBox}" Margin="56,134,177.668,19" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667" Click="Button_Click_2">
                    <TextBlock Style="{DynamicResource Icons}" FontSize="13"><Run Text="Iniciar Sesión"/></TextBlock>
                </Button>
                <Button Height="{Binding Height, ElementName=textBox}" Margin="179.834,134,53.834,19" Style="{DynamicResource PinkButton}" Foreground="White" FontSize="26.667" Click="Button_Click_1">
                    <TextBlock Style="{DynamicResource Icons}" FontSize="13"><Run Text="Salir"/></TextBlock>
                </Button>
            </Grid>
        </StackPanel>
	</Border>
</Window>