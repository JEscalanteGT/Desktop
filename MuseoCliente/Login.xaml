<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MuseoCliente.Login"
	x:Name="Window"
	Title="Login"
	Width="344" Height="277" ResizeMode="NoResize">

	<Border x:Name="LayoutRoot" >
		<StackPanel Margin="0" Orientation="Vertical">
			<Label Height="20"/>
			<Label FontSize="16.888" Foreground="{DynamicResource Black}" Content="Bienvenido" HorizontalContentAlignment="Center" FontWeight="Bold"/>
			<Grid Height="175.96">
				<Label Margin="30,10,0,138.5" Height="27.46" Width="53" HorizontalAlignment="Left">Usuario</Label>
				<TextBox x:Name="txtUsuario" Height="20" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Center" Margin="30,37.46,35,118.5" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource DarkGray}" VerticalContentAlignment="Center"/>
				<Label Margin="30,64.75,0,83.75" Height="27.46" Width="73" HorizontalAlignment="Left">Contraseña</Label>
				<PasswordBox x:Name="txtPassword" Height="20" VerticalAlignment="Center" Margin="30,92.21,35,63.75" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource DarkGray}" VerticalContentAlignment="Center"/>
				<Button Height="{Binding Height, ElementName=textBox}" Margin="56,134,177.668,19" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667">
					<TextBlock Style="{DynamicResource Icons}" FontSize="13">Iniciar Sesión</TextBlock>
				</Button>
				<Button Height="{Binding Height, ElementName=textBox}" Margin="179.834,134,53.834,19" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667">
					<TextBlock Style="{DynamicResource Icons}" FontSize="13">Salir</TextBlock>
				</Button>
			</Grid>
			<Label Height="10"/>
		</StackPanel>
	</Border>
</Window>