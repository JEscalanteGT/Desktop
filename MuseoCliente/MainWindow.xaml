<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MuseoCliente" x:Class="MuseoCliente.MainWindow"
        Title="MainWindow" Height="500" Width="725" Loaded="Window_Loaded_1">
	<Window.Resources>
		<Storyboard x:Key="OnClick1"/>
	</Window.Resources>
	<DockPanel>
		<Menu HorizontalAlignment="Left" Width="209" Margin="0,50,0,0" Background="{x:Null}">
			<DockPanel Height="61" LastChildFill="False" Width="199">
				<TextBox x:Name="txtBusqueda" Height="30" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="147" Margin="0,20,0,11" Style="{DynamicResource CustomTextBox}" FontFamily="/MuseoCliente;component/Font/#Source Sans Pro" Foreground="{DynamicResource DarkGray}"/>
				<Button Width="44" Height="{Binding Height, ElementName=textBox}" Margin="0,20,0,11" Style="{DynamicResource BlueButton}" Foreground="White" FontSize="26.667">
                    <TextBlock Style="{DynamicResource Icons}" FontSize="21.333">🔍</TextBlock>
				</Button>
			</DockPanel>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gray}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gray}" Width="165"/>
			<MenuItem Height="35" Width="209" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource CustomMenuItem}" FontSize="16" Margin="0">
				<MenuItem.Header>
                    <TextBlock Style="{DynamicResource Icons}" FontSize="32">&#127942;<TextBlock Style="{DynamicResource SourceSans}" FontSize="14">Piezas</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gray}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gray}" Width="165"/>
			<MenuItem Height="35" Width="209" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource CustomMenuItem}" FontSize="16" Margin="0">
                <MenuItem.Header>
                    <TextBlock Style="{DynamicResource Icons}" FontSize="32">&#xE800;<TextBlock Style="{DynamicResource SourceSans}" FontSize="14"><Run Text="Operaciones"/></TextBlock></TextBlock>
                </MenuItem.Header>
            </MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gray}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gray}" Width="165"/>
			<MenuItem Height="35" Width="209" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource CustomMenuItem}" FontSize="16" Margin="0">
				<MenuItem.Header>
                    <TextBlock Style="{DynamicResource Icons}" FontSize="32">&#128247;<TextBlock Style="{DynamicResource SourceSans}" FontSize="14">Fotografías</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gray}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gray}" Width="165"/>
			<MenuItem Height="35" Width="209" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource CustomMenuItem}" FontSize="16" Margin="0">
				<MenuItem.Header>
                    <TextBlock Style="{DynamicResource Icons}" FontSize="32">👥<TextBlock Style="{DynamicResource SourceSans}" FontSize="14">Usuarios</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
			<Path Data="M3,5 L167,5" Fill="{DynamicResource Gray}" Height="1" Stretch="Fill" Stroke="{DynamicResource Gray}" Width="165"/>
			<MenuItem Height="35" Width="209" Style="{DynamicResource CustomMenuItem}" FontSize="16" Margin="0">
				<MenuItem.Header>
                    <TextBlock Style="{DynamicResource Icons}" FontSize="32">&#59185;<TextBlock Style="{DynamicResource SourceSans}" FontSize="14">Fichas</TextBlock></TextBlock>
				</MenuItem.Header>
			</MenuItem>
		</Menu>
		<Border Height="45" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="-209,0,0,0" BorderBrush="{DynamicResource DarkGray}" BorderThickness="0,0,0,1" >
			<DockPanel LastChildFill="False" Background="{DynamicResource White}">
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,5,0,10">                    
					<TextBlock HorizontalAlignment="Center" FontSize="26.667" FontWeight="Bold" Style="{DynamicResource BlueIcons}">&#8962;</TextBlock>
				</Label>
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5,0,10" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="26.667" FontWeight="Bold" Style="{DynamicResource BlueIcons}">&#9881;</TextBlock>
				</Label>
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5,0,10" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="26.667" FontWeight="Bold" Style="{DynamicResource BlueIcons}">&#10067;</TextBlock>
				</Label>
				<Label Height="29" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5,0,10" DockPanel.Dock="Right">
					<TextBlock x:Name="lblConectado" HorizontalAlignment="Center" FontSize="26.667" FontWeight="Bold" Style="{DynamicResource BlueIcons}">&#9729;</TextBlock>
				</Label>
			</DockPanel>
		</Border>
		<Border BorderThickness="1,0,0,0" Background="{DynamicResource White}" BorderBrush="{DynamicResource DarkGray}"/>
        
	</DockPanel>
</Window>
