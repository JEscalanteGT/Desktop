<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MuseoCliente.modPieza"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="760">

	<DockPanel x:Name="LayoutRoot" Background="{DynamicResource White}">
		<Border DockPanel.Dock="Top" Margin="0" Height="30" VerticalAlignment="Top" BorderBrush="{DynamicResource Gray}" BorderThickness="0,0,0,2">
			<DockPanel>
				<Label DockPanel.Dock="Left">[Op] Pieza</Label>
				<Label Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Style="{DynamicResource GrayIcons}"><Run Text="✎"/></TextBlock>
				</Label>
				<Label Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Style="{DynamicResource GrayIcons}"><Run Text="✎"/></TextBlock>
				</Label>
			</DockPanel>
		</Border>
		<StackPanel>
			<Label Height="5"/>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<Label DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">Código:</Label>
				<TextBox Height="25" Width="300" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			</DockPanel>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<Label DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">Clasificación:</Label>
				<ComboBox Height="20" Width="475" Margin="5,0,0,0"/>
			</DockPanel>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<DockPanel Height="35" HorizontalAlignment="Center">
					<Label DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">Código SLUG:</Label>
					<TextBox Height="25" Width="188" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
				</DockPanel>
				<DockPanel Height="35" HorizontalAlignment="Center" Margin="15,0,0,0">
					<Label DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">Código IDAEH:</Label>
					<TextBox Height="25" Width="188" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
				</DockPanel>
			</DockPanel>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<DockPanel Height="35" HorizontalAlignment="Center">
					<Label DockPanel.Dock="Left" Width="82.91" HorizontalContentAlignment="Right" HorizontalAlignment="Center" VerticalAlignment="Center">Autor:</Label>
					<ComboBox Height="20" Width="188" Margin="0"/>
				</DockPanel>
				<DockPanel Height="35" HorizontalAlignment="Center" Margin="20,0,0,0">
					<Label DockPanel.Dock="Left" Width="82.91" HorizontalContentAlignment="Right" HorizontalAlignment="Center" VerticalAlignment="Center">País:</Label>
					<ComboBox Height="20" Width="188" Margin="0"/>
				</DockPanel>
			</DockPanel>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<DockPanel Height="35" HorizontalAlignment="Center">
					<Label DockPanel.Dock="Left" Width="82.91" HorizontalContentAlignment="Right" HorizontalAlignment="Center" VerticalAlignment="Center">Procedencia:</Label>
					<TextBox Height="25" Width="188" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
				</DockPanel>
				<DockPanel Height="35" HorizontalAlignment="Center" Margin="20,0,0,0">
					<Label DockPanel.Dock="Left" Width="85" HorizontalContentAlignment="Right" HorizontalAlignment="Center" VerticalAlignment="Center">Fecha Ingreso:</Label>
					<DatePicker Height="25" Width="188" Margin="0"/>
				</DockPanel>
			</DockPanel>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<DockPanel HorizontalAlignment="Center" Width="118">
					<CheckBox Height="25" VerticalContentAlignment="Center" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">Registro IDAEH</CheckBox>
				</DockPanel>
				<DockPanel HorizontalAlignment="Center">
					<Label DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">Archivo IDAEH:</Label>
					<TextBox Height="25" Width="330" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
					<Button Height="25" Width="30">...</Button>
				</DockPanel>
			</DockPanel>
			<DockPanel Height="35" HorizontalAlignment="Center">
				<Label DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">Nombre:</Label>
				<TextBox Height="25" Width="515" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			</DockPanel>
			<StackPanel Margin="40,10,35,0">
				<Label>Descripción:</Label>
				<RichTextBox Height="110"/>
			</StackPanel>
			<StackPanel Margin="40,10,35,0">
				<Label>Observaciones:</Label>
				<RichTextBox Height="50"/>
			</StackPanel>
			<StackPanel Margin="40,10,35,0">
				<Label>Región Cultural:</Label>
				<DockPanel Height="35" HorizontalAlignment="Center">
					<RadioButton VerticalAlignment="Center" Margin="10,0,10,0">Norte</RadioButton>
					<RadioButton VerticalAlignment="Center" Margin="0,0,10,0">Occidente</RadioButton>
					<RadioButton VerticalAlignment="Center" Margin="0,0,10,0">Oriente</RadioButton>
					<RadioButton VerticalAlignment="Center" Margin="0,0,10,0">Sur</RadioButton>
					<RadioButton VerticalAlignment="Center" Margin="0,0,10,0">Centro</RadioButton>
					<RadioButton VerticalAlignment="Center" Margin="0,0,10,0">Otra</RadioButton>
					<RadioButton VerticalAlignment="Center" Margin="0,0,10,0">Indeterminada</RadioButton>
				</DockPanel>
			</StackPanel>
			<StackPanel Margin="40,10,35,0">
				<Label>Región Cultural:</Label>
				<DockPanel Height="35" HorizontalAlignment="Center">
					<DockPanel Width="120">
						<Label Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Content="Altura:"/>
						<TextBox Height="25" Width="30" Margin="0,5"/>
						<Label Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="cm"/>
					</DockPanel>
					<DockPanel Width="120" Margin="5,0,0,0">
						<Label Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Content="Ancho:"/>
						<TextBox Height="25" Width="30" Margin="0,5"/>
						<Label Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="cm"/>
					</DockPanel>
					<DockPanel Width="120" Margin="5,0,0,0">
						<Label Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Content="Largo:"/>
						<TextBox Height="25" Width="30" Margin="0,5"/>
						<Label Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="cm"/>
					</DockPanel>
				</DockPanel>
				<DockPanel Height="35" HorizontalAlignment="Center">
					<DockPanel Width="120" Margin="5,0,0,0">
						<Label Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Content="Grosor:"/>
						<TextBox Height="25" Width="30" Margin="0,5"/>
						<Label Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="cm"/>
					</DockPanel>
					<DockPanel Width="120" Margin="15,0,0,0">
						<Label Width="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Content="Diametro:"/>
						<TextBox Height="25" Width="30" Margin="0,5"/>
						<Label Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Content="cm"/>
					</DockPanel>
				</DockPanel>
			</StackPanel>
			<DockPanel HorizontalAlignment="Center" Margin="0,20,0,0">
				<CheckBox Height="25" VerticalContentAlignment="Center" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">Pieza Maestra</CheckBox>
				<CheckBox Height="25" VerticalContentAlignment="Center" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,0,0,0">En Exhibición</CheckBox>
			</DockPanel>
			<Label Height="20"></Label>
		</StackPanel>
	</DockPanel>
</UserControl>