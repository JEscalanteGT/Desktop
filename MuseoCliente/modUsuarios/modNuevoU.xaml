<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MuseoCliente.modNuevoU"
	x:Name="Window"
	Title="Nuevo Usuario"
	Width="344" Height="277" ResizeMode="NoResize" WindowStyle="ToolWindow">

	<Grid x:Name="LayoutRoot">
		<StackPanel>
			<Label Height="15"/>
			<Label Margin="10,0,0,0">Nombre de Usuario:</Label>
			<TextBox Margin="10,0,20,0"/>
			<Label Margin="10,0,0,0">Contraseña:</Label>
			<TextBox Margin="10,0,20,0"/>
			<Label Margin="10,0,0,0">Correo:</Label>
			<TextBox Margin="10,0,20,20"/>
			<DockPanel Width="300" HorizontalAlignment="Center">
				<Button Width="100" Margin="25,0,0,0" HorizontalAlignment="Center">Guardar</Button>
				<Button Width="100" Margin="0" HorizontalAlignment="Center">Cancelar</Button>
			</DockPanel>
		</StackPanel>
	</Grid>
</Window>