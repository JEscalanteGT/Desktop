<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MuseoCliente.modUsuario"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<DockPanel x:Name="LayoutRoot" Background="{DynamicResource White}">
		<Border DockPanel.Dock="Top" Margin="0" Height="30" VerticalAlignment="Top" BorderBrush="{DynamicResource Gray}" BorderThickness="0,0,0,2">
			<DockPanel>
				<Label DockPanel.Dock="Left">[Op] Usuario</Label>
				<Label Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Style="{DynamicResource GrayIcons}"><Run Text="✎"/></TextBlock>
				</Label>
				<Label Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{DynamicResource CustomLabel}" DockPanel.Dock="Right">
					<TextBlock HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Style="{DynamicResource GrayIcons}"><Run Text="✎"/></TextBlock>
				</Label>
			</DockPanel>
		</Border>
		<StackPanel>
			<Label Height="20"/>
			<Border Width="380" BorderBrush="{DynamicResource DarkGray}" BorderThickness="2">
				<StackPanel Orientation="Vertical" Height="95.96">
					<DockPanel>
						<Label Content="ACERCA DE"/>
					</DockPanel>
					<DockPanel Height="35" Width="380" HorizontalAlignment="Center">
						<TextBox Height="25" Width="300" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
						<Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Nombres:"/>
					</DockPanel>
					<DockPanel Height="35" Width="380" HorizontalAlignment="Center">
						<TextBox Height="25" Width="300" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
						<Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Apellidos:"/>
					</DockPanel>
				</StackPanel>
			</Border>
			<Border Width="380" BorderBrush="{DynamicResource DarkGray}" BorderThickness="2">
				<StackPanel Orientation="Vertical" Height="95.96">
					<DockPanel>
						<Label Content="USUARIO"/>
					</DockPanel>
					<DockPanel Height="35" Width="380" HorizontalAlignment="Center">
						<TextBox Height="25" Width="300" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
						<Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Content="UserName:"/>
					</DockPanel>
					<DockPanel Height="35" Width="380" HorizontalAlignment="Center">
						<TextBox Height="25" Width="300" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
						<Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Contraseña:"/>
					</DockPanel>
				</StackPanel>
			</Border>
			<Border Width="380" BorderBrush="{DynamicResource DarkGray}" BorderThickness="2">
				<StackPanel Orientation="Vertical" Height="65">
					<DockPanel>
						<Label Content="CORREO"/>
					</DockPanel>
					<DockPanel Height="35" Width="380" HorizontalAlignment="Center">
						<TextBox Height="25" Width="300" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
						<Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Content="e-mail:"/>
					</DockPanel>
				</StackPanel>
			</Border>
			<Border Width="430" BorderBrush="{DynamicResource DarkGray}" BorderThickness="2">
				<StackPanel Orientation="Vertical" Height="95.96">
					<DockPanel>
						<Label Content="INFORMACION"/>
					</DockPanel>
					<DockPanel Height="35" Width="430" HorizontalAlignment="Center">
						<ComboBox Height="20" Width="300" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,24,0"/>
						<Label DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Content="Grupo usuario:"/>
					</DockPanel>
					<DockPanel Height="35" Width="430" HorizontalAlignment="Center">
						<DockPanel Margin="0" Width="320">
							<CheckBox VerticalAlignment="Center" Margin="10,0,0,0" Content="Super Usuario"/>
							<CheckBox VerticalAlignment="Center" Margin="10,0,0,0" Content="Staff"/>
							<CheckBox VerticalAlignment="Center" Margin="10,0,0,0" Content="Activo"/>
							<CheckBox VerticalAlignment="Center" Margin="10,0,0,0" Content="Voluntario"/>
						</DockPanel>
					</DockPanel>
				</StackPanel>
			</Border>
			<Label Height="20"></Label>
		</StackPanel>
	</DockPanel>
</UserControl>